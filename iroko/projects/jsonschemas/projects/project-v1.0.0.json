    "geoLocation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "geoLocationPoint": {
            "type": "object",
            "properties": {
              "pointLongitude": {
                "type": "number",
                "description": "Dimensión longitudinal del punto."
              },
              "pointLatitude": {
                "type": "number",
                "description": "Dimensión latitudinal del punto."
              }
            },
            "description": "Un punto contiene un único par de latitud-longitud."
          },
          "geoLocationBox": {
            "type": "object",
            "properties": {
              "westBoundLongitude": {
                "type": "number",
                "description": "Dimensión longitudinal occidental del cuadro. Es obligatorio si se usa geoLocationBox."
              },
              "eastBoundLongitude": {
                "type": "number",
                "description": "Dimensión longitudinal occidental del cuadro. Es obligatorio si se usa geoLocationBox."
              },
              "southBoundLatitude": {
                "type": "number",
                "description": "Dimensión latitudinal sur del cuadro. Es obligatorio si se usa geoLocationBox."
              },
              "northBoundLatitude": {
                "type": "number",
                "description": "V"
              }
            }
          },
          "geoLocationPlace": {
            "type": "string"
          },
          "geoLocationPolygon": {
            "type": "object",
            "description": "Punto de ubicación en un polígono. Es obligatorio si se usa geoLocationPolygon.",
            "properties": {
              "polygonPoint": {
                "type": "array",
                "minItems": 4,
                "items": {
                  "type": "object",
                  "properties": {
                    "pointLongitude": {
                      "type": "number",
                      "description": "Dimensión longitudinal del punto. Es obligatorio si se usa polygonPoint"
                    },
                    "pointLatitude": {
                      "type": "number",
                      "description": "Dimensión latitudinal del punto. Es obligatorio si se usa polygonPoint."
                    }
                  }
                }
              },
              "inPolygonPoint": {
                "type": "object",
                "properties": {
                  "pointLongitude": {
                    "type": "number",
                    "description": "Dimensión longitudinal del punto. Es obligatorio si se usa polygonPoint"
                  },
                  "pointLatitude": {
                    "type": "number",
                    "description": "Dimensión latitudinal del punto. Es obligatorio si se usa polygonPoint."
                  }
                }
              }
            }
          }
        }
      }
    },
