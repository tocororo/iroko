{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost/schemas/spaces/space-v1.0.0.json",
  "additionalProperties": true,
  "title": "space v1.0.0",
  "type": "object",
  "properties": {
    "orid": {
      "description": "Invenio space identifier (integer).",
      "type": "number"
    },
    "title": {
      "description": "Space title.",
      "type": "string"
    },
    "description": {
      "description": "Space title.",
      "type": "string"
    },
    "url": {
      "description": "URL of the source",
      "type": "string",
      "format":"uri"
    },
    "issn":{
      "description": "ISSN",
      "type": "object",
      "properties":{
        "printed":{
          "type": "string"
        },
        "electronic":{
          "type": "string"
        },
        "link":{
          "type": "string"
        }
      }
    },
    "rnps": {
      "type": "string"
    },
    "email":{
      "type": "string"
    },
    "logo":{
      "type": "string"
    },
    "seriadas_cubanas":{
      "type": "string",
      "format":"uri"
    },
    "source_category": {
      "type": "string",
      "description": "Category of the source, eg: Grupo MES, etc..."
    },
    "institution": {
      "type": "string"
    },
    "subjects": {      
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "licence": {
      "type": "string"
    },
    "year_start": {
      "type": "string",
      "format":"date-time"
    },
    "year_end": {
      "type": "string",
      "format":"date-time"
    },
    "keywords": {
      "description": "Free text keywords.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "referecences": {
      "description": "Source references, like databases for journals.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
